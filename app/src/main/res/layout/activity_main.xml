<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Lista de Contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lbtextView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textColor="#0B0B0B" android:textSize="17dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="686dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lbtextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
            android:id="@+id/listRViewcontacto"/>
</androidx.constraintlayout.widget.ConstraintLayout>